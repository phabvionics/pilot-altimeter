<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.phabvionics.pilotaltimeter"
    android:versionCode="15"
    android:versionName="1.9"
    android:installLocation="auto" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> TO BE ENABLED IF LOGGING ONLY -->

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="uk.co.phabvionics.pilotaltimeter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uk.co.phabvionics.pilotaltimeter.UserSettingsActivity"
            android:label="@string/settings_name"
            android:parentActivityName="uk.co.phabvionics.pilotaltimeter.MainActivity"/>
    </application>

</manifest>
